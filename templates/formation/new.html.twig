{% extends 'dash/index.html.twig' %}

{% block title %}Création d'une nouvelle formation{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Ajouter une nouvelle formation</h1>

        <div class="card shadow">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

                <div class="mb-3">
                    {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(form.nom) }}</div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(form.description) }}</div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.typeformation, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.typeformation, {'attr': {'class': 'form-control', 'id': 'typeformation'}}) }}
                    <div class="text-danger">{{ form_errors(form.typeformation) }}</div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.lieu, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.lieu, {'attr': {'class': 'form-control', 'id': 'lieu'}}) }}
                    <div class="text-danger">{{ form_errors(form.lieu) }}</div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.date_debut, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.date_debut, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(form.date_debut) }}</div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.date_fin, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.date_fin, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(form.date_fin) }}</div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.cout, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.cout, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(form.cout) }}</div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.formateur, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.formateur, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(form.formateur) }}</div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.places, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.places, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(form.places) }}</div>
                </div>

                <!-- Boutons -->
                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_afficherformation') }}" class="btn btn-secondary">Retour</a>
                    <button class="btn btn-primary" type="submit">Enregistrer</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <script>
        // Fonction pour activer ou désactiver le champ "Lieu" en fonction du "Type de formation"
        document.addEventListener('DOMContentLoaded', function () {
            const typeFormation = document.getElementById('typeformation');
            const lieuField = document.getElementById('lieu');

            // Vérifier si le type est déjà "En ligne" lors du chargement de la page
            if (typeFormation.value === 'En ligne') {
                lieuField.disabled = true;
            }

            // Ajouter un event listener pour le changement de valeur du "Type de formation"
            typeFormation.addEventListener('change', function () {
                if (typeFormation.value === 'En ligne') {
                    lieuField.disabled = true;  // Désactiver le champ "Lieu"
                } else {
                    lieuField.disabled = false;  // Réactiver le champ "Lieu"
                }
            });
        });
    </script>
    <style>
    /* Couleurs principales */
    :root {
        --primary-color: #5a3e92; /* Violet */
        --secondary-color: #3ec6e7; /* Bleu turquoise */
        --background-light: #f9f9fc; /* Couleur de fond légère */
        --text-dark: #333; /* Texte sombre */
    }
    
    /* Conteneur principal centré */
    .container {
        max-width:; /* Réduction de la largeur */
        margin: 0 auto; /* Centrer horizontalement */
        background-color: var(--background-light);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
    
    /* Titre principal */
    h1, h2 {
        font-family: 'Arial', sans-serif;
        font-weight: bold;
        color: var(--primary-color);
        text-align: center;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
        margin-bottom: 1.5rem;
    }
    
    /* Carte de formulaire */
    .card {
        border: 2px solid var(--primary-color);
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
    
    /* Labels du formulaire */
    .form-label {
        font-weight: bold;
        color: var(--primary-color);
    }
    
    /* Champs de formulaire */
    .form-control {
        border: 2px solid var(--secondary-color);
        border-radius: 25px;
        padding: 10px;
        transition: border-color 0.3s ease;
    }
    
    .form-control:focus {
        border-color: var(--primary-color);
        outline: none;
        box-shadow: 0 0 5px var(--primary-color);
    }
    
    /* Bouton principal */
    .btn-success {
        background-color: var(--primary-color);
        color: #ffffff;
        border: none;
        border-radius: 25px;
        padding: 10px 20px;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.2s ease;
        width: 100%;
    }
    
    .btn-success:hover {
        background-color: var(--secondary-color);
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
    }
    
    /* Tableau des clubs */
    .table {
        margin-top: 20px;
        background-color: #ffffff;
        border-radius: 10px;
        overflow: hidden;
        border: 2px solid var(--primary-color);
    }
    
    .table thead {
        background-color: var(--primary-color);
        color: #ffffff;
    }
    
    .table tbody tr:nth-child(even) {
        background-color: var(--background-light);
    }
    
    .table tbody tr:hover {
        background-color: var(--secondary-color);
        color: #ffffff;
    }
    
    .table td, .table th {
        text-align: center;
        vertical-align: middle;
    }
    
    /* Boutons dans le tableau */
    .btn-primary {
        background-color: var(--secondary-color);
        border: none;
        color: #fff;
        border-radius: 20px;
        padding: 5px 10px;
        transition: background-color 0.3s ease;
    }
    
    .btn-primary:hover {
        background-color: var(--primary-color);
    }
    
    .btn-danger {
        background-color: #e74c3c;
        border: none;
        color: #fff;
        border-radius: 20px;
        padding: 5px 10px;
        transition: background-color 0.3s ease;
    }
    
    .btn-danger:hover {
        background-color: #c0392b;
    }
    
</style>
{% endblock %}
