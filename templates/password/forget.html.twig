{% extends 'base_form.html.twig' %}
{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<h1>Mot de passe oublié</h1>

<div class="card mt-4">
    <div class="card-body">
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <form method="post" action="{{ path('app_password_forgot') }}">
            <div class="form-group">
                <label for="email">Adresse e-mail</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Entrez votre adresse e-mail" required>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Envoyer le lien de réinitialisation</button>
        </form>
    </div>
</div>
{% endblock %}